<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Title - Centered -->
        <TextView
            android:id="@+id/forgotPasswordHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/lightblue"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp" />

        <!-- Container Card - Centered with fixed width -->
        <LinearLayout
            android:id="@+id/changePassContainer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_rounded_container"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- ID Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/idNumberLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID Number"
                app:boxStrokeColor="@color/blue"
                app:hintTextColor="@color/blue"
                app:startIconDrawable="@drawable/ic_badge"
                app:startIconTint="@color/blue"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editIdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textColorHint="@color/black"
                    android:inputType="number"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Birthdate -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthdateLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Birthdate"
                app:startIconDrawable="@drawable/ic_calendar"
                app:startIconTint="@color/blue"
                app:boxStrokeColor="@color/blue"
                app:hintTextColor="@color/blue"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Find Account Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/findAccountButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Find Account"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/blue"
                app:cornerRadius="12dp"
                android:elevation="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Password Fields (Initially Hidden) -->
            <LinearLayout
                android:id="@+id/passwordFieldsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal">

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/blue"
                    android:alpha="0.3"
                    android:layout_marginBottom="20dp" />

                <!-- Instruction Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set your new password"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- New Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/newPasswordLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="New Password"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/blue"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/blue"
                    app:boxStrokeColor="@color/blue"
                    app:hintTextColor="@color/blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPasswordLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Confirm Password"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/blue"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/blue"
                    app:boxStrokeColor="@color/blue"
                    app:hintTextColor="@color/blue"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    android:layout_marginBottom="24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Requirements Hint -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password must be 8 characters with at least one capital letter and combination of letters and numbers"
                    android:textColor="@color/blue"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

                <!-- Reset Password Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/resetPasswordButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Reset Password"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blue"
                    app:cornerRadius="12dp"
                    android:elevation="4dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Back Button - Centered -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/blue"
            android:text="â† Back to Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="25dp"
            app:iconPadding="0dp" />

    </LinearLayout>
</ScrollView>